#!/usr/bin/env bash
TEMP=/tmp/current_wall

files=(~/.config/hypr/wallpapers/*)

index=$(cat $TEMP)
index=$((index+1))
if [ $index -ge ${#files[@]} ]; then
  index=0
fi
echo $index > $TEMP
swww img "${files[$index]}" --transition-type grow --transition-pos 1920,1080 --transition-duration 3 --transition-fps 60

exit 0
